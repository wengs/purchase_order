<div class="col-md-4">
  <%= simple_form_for side, url: { action: action, q: params[:q] ? params[:q] : "" }, html: { multipart: true } do |f| %>
    <% if side.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(side.errors.count, "error") %> prohibited this side from being saved:</h2>

        <ul>
        <% side.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "manage" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit action == "update" ? "Update" : "Create", class: "submit-button pull-left", style: "margin-right: 20px" %>
      <%= link_to 'Back', sides_path, class: 'btn btn-md btn-default pull-left' %>
    </div>
  <% end %>
</div>