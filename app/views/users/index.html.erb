<%= render partial: "layouts/partials/bootstrap_alerts" %>

<h3>Users</h3>
<br>
<div class="col-md-8">
  <div class="row">
    <div class="col-md-2">
      <!-- New Button -->
      <%= link_to new_user_path, class: 'btn btn-md btn-success' do %>
        <i class="fa fa-plus"></i> New User
      <% end %>
    </div>
  </div>

  <br>
  <%= paginate @users %>
  <!-- Listing -->
  <%= search_form_for @q do |f| %>
    <%= f.submit class: 'ransack-search-button' %>
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Tools</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= t user.role.name %></td>
            <td class="col-md-1" style="text-align:center">
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-success' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= paginate @users %>
</div>
<br>