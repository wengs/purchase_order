<%= f.input :po_id, as: :hidden %>
<div class="row">
  <div class="col-md-12">
    <%= f.input :description, as: :text, wrapper_html: { class: "description" }, disabled: true %>
  </div>
</div>
<div class="row">
  <div class="col-md-4"><%= f.input :width, label: "Width (in)", disabled: true %></div>
  <div class="col-md-4"><%= f.input :height, label: "Height (in)", disabled: true %></div>
  <div class="col-md-4">
    <%= label_tag :substrate, "Substrate" %>
    <%= f.input_field :substrate, disabled: true, value: graphic.substrate.name if graphic.substrate %></td>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= f.input :finishing, as: :text, disabled: true, wrapper_html: { class: "finishing" } %>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <%= f.label "Qty per Version" %>
    <table>
      <tr>
        <td colspan="1"><%= f.input :quantity, label: false, disabled: true, wrapper_html: { class: "quantity" } %></td>
        <td colspan="1" style="width: 33.3%">each of</td>
        <td colspan="1"><%= f.input :number_of_versions, label: false, disabled: true, wrapper_html: { class: "number-of-versions" } %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%= label_tag :side, "Sides" %>
    <%= f.input_field :side, disabled: true, value: graphic.side.name if graphic.side %>
  </div>
</div>
<div class="row col-md-4">
  <%= f.label :hardware_price %>
  <div class="input-group">
    <span class="input-group-addon" style="width: 20px !important;">$</span>
    <%= f.input :hardware_price, disabled: true, label: false, as: :decimal, input_html: {value: f.object.hardware_price || '0.00'} %>
  </div>
</div>