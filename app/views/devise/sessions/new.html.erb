<div class="vertical-center">
  <div class="outer-login">
    <% if flash[:error] %>
      <div class="alert-login-message alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span class="glyphicon glyphicon-remove" id="close-login-message"></span></button>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= flash[:error] %>
      </div>
    <% end %>
    <fieldset class="login">
      <h1>Sign In</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, placeholder: "Enter Email", class: "login-email" %>

        <%= f.password_field :password, placeholder: "Enter Password", autocomplete: "off", class: "login-password" %>

        <%= f.submit "Log In", class: "login-button" %>

        <div class="copyright">
          &copy; 2016
        </div>
      <% end %>
    </fieldset>
  </div>
</div>